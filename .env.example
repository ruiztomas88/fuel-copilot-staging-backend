# Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=fuel_admin
MYSQL_PASSWORD=your_password_here
MYSQL_DATABASE=fuel_copilot

# Wialon Database (source)
WIALON_MYSQL_HOST=localhost
WIALON_MYSQL_PORT=3306
WIALON_MYSQL_USER=wialon_user
WIALON_MYSQL_PASSWORD=your_wialon_password
WIALON_MYSQL_DATABASE=wialon_collect

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS - Add your frontend URLs
CORS_ORIGINS=https://your-frontend.com,http://localhost:5173

# JWT Authentication
# üîê v5.3.3: REQUIRED in production! Will fail to start without it.
# Generate a strong secret key:
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-change-in-production

# üîê v5.3.3: Environment (development or production)
# In production, JWT_SECRET_KEY and password env vars are REQUIRED
ENVIRONMENT=development

# üîê v5.3.3: User passwords (bcrypt hashed at startup)
# In production, these MUST be set as environment variables!
# ADMIN_PASSWORD=your_secure_admin_password
# SKYLORD_PASSWORD=your_secure_skylord_password
# SKYLORD_VIEWER_PASSWORD=your_secure_viewer_password

# Twilio SMS Notifications
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_FROM_NUMBER=+1234567890
TWILIO_TO_NUMBERS=+1234567890,+0987654321

# Email Notifications (Gmail SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
ALERT_EMAIL_TO=dispatcher@yourcompany.com

# Notification Settings
SMS_ENABLED=true
EMAIL_ENABLED=true
NOTIFICATIONS_ENABLED=true
